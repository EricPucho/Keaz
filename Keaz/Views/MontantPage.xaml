             xmlns:utils="clr-namespace:Keaz.Utils"
             x:Class="Keaz.Views.MontantPage" Title="Entrer le montant">


    <StackLayout Padding="10" VerticalOptions="FillAndExpand">
        <StackLayout Margin="0,40,0,30" VerticalOptions="FillAndExpand">

            <utils:CustomEntry Text = ""
                            Placeholder="5600 FCFA"
                            x:Name="entry_motif" FontSize="40"
                            BackgroundColor="Transparent"
