        </StackLayout>

        <Button BackgroundColor="#90E86C"
                     TextColor="WhiteSmoke" 
                Text="Suivant" Margin="0,0,0,30"
                HeightRequest="50" 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand" Clicked="Button_Clicked"/>
